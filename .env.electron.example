# FluxStack Electron Configuration Example
# Copy this file to .env and customize for your application

# ========================================
# ELECTRON PLUGIN
# ========================================

# Enable Electron plugin
ELECTRON_ENABLED=true

# ========================================
# APPLICATION SETTINGS
# ========================================

# Application display name
ELECTRON_PRODUCT_NAME="My FluxStack App"

# Application ID (reverse domain notation)
ELECTRON_APP_ID=com.mycompany.myapp

# ========================================
# WINDOW SETTINGS
# ========================================

# Default window dimensions
ELECTRON_WINDOW_WIDTH=1280
ELECTRON_WINDOW_HEIGHT=720

# Minimum window dimensions
ELECTRON_MIN_WIDTH=800
ELECTRON_MIN_HEIGHT=600

# ========================================
# BUILD SETTINGS
# ========================================

# Output directory for built applications
ELECTRON_OUTPUT_DIR=dist-electron

# Build resources directory
ELECTRON_BUILD_DIR=build

# Package as ASAR archive (reduces file count, improves load time)
ELECTRON_ASAR=true

# Compression level: store, normal, maximum
ELECTRON_COMPRESSION=normal

# ========================================
# PLATFORM-SPECIFIC SETTINGS
# ========================================

# macOS app category
# Options: public.app-category.developer-tools, public.app-category.business, etc.
ELECTRON_MAC_CATEGORY=public.app-category.developer-tools

# Windows installer target: nsis, portable, msi
ELECTRON_WINDOWS_TARGET=nsis

# Linux package target: AppImage, deb, rpm
ELECTRON_LINUX_TARGET=AppImage

# ========================================
# DEVELOPMENT SETTINGS
# ========================================

# Enable DevTools in development
ELECTRON_DEV_TOOLS=true

# ========================================
# SECURITY SETTINGS (RECOMMENDED DEFAULTS)
# ========================================

# Enable Node.js integration in renderer process
# ⚠️ Keep this FALSE for security!
ELECTRON_NODE_INTEGRATION=false

# Enable context isolation (recommended)
# ✅ Keep this TRUE for security!
ELECTRON_CONTEXT_ISOLATION=true

# Enable remote module
# ⚠️ Keep this FALSE for security!
ELECTRON_REMOTE_MODULE=false

# ========================================
# AUTO-UPDATER (OPTIONAL)
# ========================================

# Enable auto-updater
ELECTRON_AUTO_UPDATE=false

# Update channel: stable, beta, alpha
ELECTRON_UPDATE_CHANNEL=stable
